{
  "version": 2,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 20,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "default",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo"
      }
    },
    {
      "name": "ci",
      "inherits": "default",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "$env{BUILD_TYPE}",
        "ENABLE_EXAMPLES": "ON",
        "ENABLE_STATIC_LIB": "ON"
      }
    },
    {
      "name": "ci+vcpkg",
      "inherits": "ci",
      "cacheVariables": {
        "VCPKG_LIBRARY_LINKAGE": "dynamic",
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "default",
      "configurePreset": "default"
    },
    {
      "name": "ci",
      "configurePreset": "ci",
      "nativeToolOptions": ["-v"]
    },
    {
      "name": "ci+vcpkg",
      "inherits": "ci",
      "configurePreset": "ci+vcpkg"
    }
  ],
  "testPresets": [
    {
      "name": "default",
      "configurePreset": "default"
    },
    {
      "name": "ci",
      "configurePreset": "ci",
      "output": {
        "verbosity": "verbose"
      }
    },
    {
      "name": "ci+vcpkg",
      "inherits": "ci",
      "configurePreset": "ci+vcpkg"
    }
  ]
}
